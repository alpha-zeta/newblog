<body>
 <div class="contents">
  <nav class="navbar navbar-expand-lg navbar-light stroke">
    <div class="container mob">
      <a class="navbar-brand" href="#">yOUCITe</a>
      <div class="dropdown pull-left profileMob">
        <% if(!user&status!=1){ %>
                  <i class="fas fa-user profilePic dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/login">Log in</a>
                    <a class="dropdown-item" href="/register">Register</a>
                    <a class="dropdown-item" href="/admin/login">Admin-log in</a>
                  </div>
                <% } else if(user&&status!=1){ %>
                  <%if(!user.profilePicLink){ %>
                      <i class="profilePic profilePicSocial dropdown-toggle far fa-user-circle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                    <% } else{ %>
                      <img class="profilePicSocial dropdown-toggle" src=<%= user.profilePicLink %> type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <% } %>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <h4 class="dropdown-item"><%= user.name %></h4>
                    <a class="dropdown-item" href="/users/<%= user._id %>">Profile</a>
                    <a class="dropdown-item" href="/logout">Log out</a>
                </div>
              <% }else if(user&&status==1){ %>
